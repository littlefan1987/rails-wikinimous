
<div class="container">
  <h1>Articles</h1>
  <ul class="list-group">
    <% @articles.each do |article| %>
      <li class="list-group-item"><%= link_to article.title, article_path(article) %></li>
    <% end %>
  </ul>
  <span class="btn btn-primary btn-lg btn-block"><%= link_to "Add a new article", new_article_path %></span>
</div>
